        <module>bonaparte8-util/pom.xml</module>
        <module>bonaparte8-api-alexa/pom.xml</module>
        <module>bonaparte8-aws-sqs/pom.xml</module>
        <module>bonaparte8-vertx3/pom.xml</module>
